<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  
  <display-name>ServletInitParameterExample</display-name>
  
  <welcome-file-list>
    <welcome-file>submitFeedback.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <description></description>
    <display-name>FeedbackServlet</display-name>
    <servlet-name>FeedbackServlet</servlet-name>
    <servlet-class>com.servletInitParam.servlets.FeedbackServlet</servlet-class>
    
    <init-param>
      <description>organization emails</description>
      <param-name>company-email</param-name>
      <param-value>merve@gmail.com</param-value>
    </init-param>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>FeedbackServlet</servlet-name>
    <url-pattern>/feedbackServlet</url-pattern>
  </servlet-mapping>
  
</web-app>